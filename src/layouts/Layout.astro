---
import "../styles/base.css";
import { ClientRouter } from 'astro:transitions';
import HeaderReact from "../components/react/header.jsx";
import FooterReact from "../components/react/footer.jsx";

interface Props {
  title: string;
  description?: string;
}

const { title, description = "IT Administrator, Developer, and 3D Artist" } =
  Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
		<meta name="description" content={description} />

		<!-- Add any additional meta tags, fonts, etc. here -->
		<link rel="preconnect" href="https://fonts.googleapis.com" />
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
		<link
		href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap"
		rel="stylesheet"
		/>
		<ClientRouter />
	</head>
	<body>
		<div class="min-h-screen flex flex-col bg-gradient-to-br from-gray-900 via-gray-800 to-blue-900">
			<HeaderReact client:load />			
			<main class="flex-grow pt-16">
				<slot />
			</main>
			<FooterReact />
		</div>
	</body>
</html>
