---
    let scrolled = false;
    let isOpen = false;
  
    const navItems = [
      { label: 'Home', href: '/' },
      { label: 'About', href: '/about' },
      { label: 'Contact', href: '/contact' }
      // Add more navigation items as needed
    ];
  
    const handleScroll = () => {
      scrolled = window.scrollY > 10;
      const header = document.querySelector('header');
      if (header) {
        header.classList.toggle('scrolled', scrolled);
      }
    };
  
    const toggleMenu = () => {
      isOpen = !isOpen;
      const mobileNav = document.querySelector('.mobile-nav');
      if (mobileNav) {
        mobileNav.classList.toggle('hidden', !isOpen);
      }
    };
  
    if (typeof window !== 'undefined') {
      window.addEventListener('scroll', handleScroll);
    }
---
  
  <style>
    header.scrolled {
      background-color: rgba(17, 24, 39, 0.9); /* Equivalent to bg-gray-900/90 */
      backdrop-filter: blur(10px); /* Equivalent to backdrop-blur-md */
      box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1); /* Equivalent to shadow-lg */
      transition: all 0.3s;
    }
  </style>
  
  <header class="fixed top-0 left-0 right-0 z-50 transition-all duration-300 bg-transparent">
    <nav class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="flex items-center justify-between h-16">
        <!-- Logo -->
        <a href="/" class="flex items-center">
          <span class="text-xl font-bold gradient-text">SA</span>
        </a>
  
        <!-- Desktop Navigation -->
        <div class="hidden md:flex items-center space-x-8">
          {navItems.map(item => (
            <a href={item.href} class="nav-link text-sm font-medium">
              {item.label}
            </a>
          ))}
        </div>
  
        <!-- Mobile Menu Button -->
        <div class="md:hidden">
          <button
            onclick="toggleMenu()"
            class="text-gray-300 hover:text-white transition-colors"
          >
            <svg class="h-6 w-6" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16m-7 6h7"></path>
            </svg>
          </button>
        </div>
      </div>
  
      <!-- Mobile Navigation -->
      <div class="mobile-nav hidden md:hidden">
        <div class="glass-panel px-2 pt-2 pb-3 space-y-1 sm:px-3">
          {navItems.map(item => (
            <a
              href={item.href}
              class="block px-3 py-2 rounded-md text-base font-medium nav-link"
              onclick="toggleMenu()"
            >
              {item.label}
            </a>
          ))}
        </div>
      </div>
    </nav>
  </header>
  